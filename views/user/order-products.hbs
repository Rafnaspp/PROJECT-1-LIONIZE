  <section class="shop spad">
        <div class="container">
                    <div class="row">
                        {{#each orderProducts}}
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="/product-image/{{this.product._id}}.jpg">
                                    <ul class="product__hover">
                                         <li><a href="/product-detail?id={{this.product._id}}"> <i class="fa fa-eye" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>

                                <div class="product__item__text">
                                    <h6>{{this.product.name}}</h6>
                                   
                                    <div class="rating">
                                        {{!-- <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i> --}}

                                        <p>{{this.quantity}}piece</p>
                                    </div>
                                     <i class="fa-solid fa-indian-rupee-sign"></i> {{this.sum}}
                                    
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                    </section>