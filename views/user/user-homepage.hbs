                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</section>
<!-- Hero Section End -->
{{#if products}}
<!-- Shop Section Begin -->

<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="shop__sidebar">
                    <div class="shop__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="shop__sidebar__accordion">
                        <div class="accordion" id="accordionExample">
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                </div>
                                <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__categories">
                                            <ul class="nice-scroll">
                                                {{#each categories}}
                                                <li><a href="/category-base/{{this.Category}}">{{this.Category}}</a>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="shop__product__option">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__left">
                                <p>Showing 1â€“12 of 126 results</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__right">
                                <p>Sort by Price:</p>
                                <select>
                                    <option value="">Low To High</option>
                                    <option value="">$0 - $55</option>
                                    <option value="">$55 - $100</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    {{#each products}}
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="/product-image/{{this._id}}.jpg">
                                <ul class="product__hover">
                                    <li><a class="btn btn-light" href="/product-detail?id={{this._id}}"> <i
                                                              class="fa fa-eye" aria-hidden="true"></i></a></li>
                                    <li><a href="/add-to-wishlist/{{this._id}}"><img
                                                src="/user-assets/img/icon/heart.png" alt=""></a></li>
                                    <li><a href="#"><img src="/user-assets/img/icon/search.png" alt=""></a></li>
                                </ul>
                            </div>

                            <div class="product__item__text">
                                <h6>{{this.name}}</h6>
                                <a href="/add-to-cart/{{this._id}}" class="add-cart">+ Add To Cart</a>
                                <div class="rating">
                                    {{!-- <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i> --}}

                                    <p>{{this.category}}</p>
                                </div>
                                <i class="fa-solid fa-indian-rupee-sign"></i> {{this.price}}
                                {{!-- <div class="product__color__select">
                                    <label for="pc-4">
                                        <input type="radio" id="pc-4">
                                    </label>
                                    <label class="active black" for="pc-5">
                                        <input type="radio" id="pc-5">
                                    </label>
                                    <label class="grey" for="pc-6">
                                        <input type="radio" id="pc-6">
                                    </label>
                                </div> --}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__pagination">
                            <a class="active" href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <span>...</span>
                            <a href="#">21</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
