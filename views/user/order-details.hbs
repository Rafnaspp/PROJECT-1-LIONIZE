
  {{#if orderDetails}}
    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shopping__cart__table">
                        <table class="table table-bordered table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>mobile</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Payment</th>
                                     
                                    
                                </tr>
                            </thead>
                           
                            <tbody>
                               {{#each orderDetails}}
                            
                                <tr>
                                   <td>{{this.date}}</td>


                                <td>{{this.deliveryDetails.mobile}}</td>
                                
                                   {{#if this.orderData.discountData}} 
                                   <td >{{this.orderData.discountData.amount}}</td>
                                    {{else}}
                                    <td>{{this.totalAmount}}</td>
                                    {{/if}}

                                   <td>{{this.status}}</td> 
                                    
                                    <td>{{this.paymentMethod}}</td>

                                    <td><a class="btn btn-primary"  href="/order-products/{{this._id}}">view products</a></td>
                                </tr>
                                
                               {{/each}}  
                            </tbody>
                            
                        </table>
                    </div>
                
                </div>
            </div>
        </div>
    </section>
   
    <!-- Shopping Cart Section End -->
 {{else}}
        <!-- order unavailable Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">

                         
                         <img class="img-fluid" src="https://cdn.dribbble.com/users/1555425/screenshots/4811660/media/1965aabe4e0d22814004ac2c9dd96d51.jpg?compress=1&resize=450x338&vertical=top" alt="">
                    </div>
                </div>
            
            </div>
        </div>
    </section>
    <!--  order unavailable Section End -->
    {{/if}}
