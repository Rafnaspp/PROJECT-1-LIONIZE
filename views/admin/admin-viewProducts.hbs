<section>
    <div class="container"> 
        <div class="">
            <a href="/admin/add-product" class="btn btn-success mt-5">Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.name}} </td>
                    <td>{{this.description}} </td>
                    <td>{{this.category}} </td>
                    <td>â‚¹{{this.price}}</td>
                    <td><img src="/product-image/{{this._id}}.jpg" style="width: 50px; height: 50px;"></td>
                    <td>
                        <a href="/admin/edit-product?id={{this._id}}" class="btn btn-primary">EDIT</a>
                         <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('are you want delete {{this.name}}? ')">DELETE</a> 
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</section>
